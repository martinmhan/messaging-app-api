{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__mocks__/*"
  ]
}